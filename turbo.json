{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format-and-lint": {
			"dependsOn": ["^format-and-lint"],
			"outputs": []
		},
		"format-and-lint:fix": {
			"dependsOn": ["^format-and-lint:fix"],
			"outputs": []
		},
		"db:migrate": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false
		}
	}
}
